package W34TH3R;

import javax.swing.*;

public class WTWindow extends JFrame {

	public WTWindow() {
		
		// System configuration.
		this.setTitle("W34TH3R // 실시간 날씨 어플리케이션");
		
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		this.setSize(1024, 786);
		
		this.setResizable(true);
		
		this.setVisible(true);
		
		this.setLocationRelativeTo(null);
		
		// Custom configuration.
		this.add(this.configureCurrentWeatherLabel());
		this.add(this.configureCurrentLocationLabel());
	}
	
	private JLabel configureCurrentWeatherLabel() {
		
		JLabel label = new JLabel("현재 날씨");
		
		label.setOpaque(true);
		
		return label;
	}
	
	private JLabel configureCurrentLocationLabel() {
		
		JLabel label = new JLabel("현재 위치");
		
		label.setOpaque(true);
		
		return label;
	}
}
